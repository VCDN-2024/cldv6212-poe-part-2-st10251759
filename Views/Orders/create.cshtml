        padding: 0;
    }

    main {
        background-color: #051c42;
    }

    /* Heading Style */
    h1 {
        text-align: center;
        color: #fff; /* Dark blue color for the heading */
        margin-bottom: 20px;
    }

    /* Form Container Style */
    form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff; /* White background for the form */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Form Group Style */
    .form-group {
        margin-bottom: 15px;
    }

    /* Label Style */
    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #051c42; /* Dark blue color for labels */
    }

    /* Input Field Style */
    input.form-control {
        width: 100%;
        padding: 10px;
