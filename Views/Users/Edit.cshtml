@model ST10251759_CLDV6212_POE_Part_1.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="page-title">Edit Customer</h2>

<form asp-action="Edit" class="edit-customer-form">
    <!-- Hidden fields for PartitionKey and RowKey -->
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="ETag" />
    <input type="hidden" asp-for="Timestamp" />
    <input type="hidden" asp-for="PasswordHash" />

    <!-- FullName (read-only) -->
    <div class="form-group">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" readonly />
        <span asp-validation-for="FullName" class="validation-message"></span>
    </div>

    <!-- Email (read-only) -->
    <div class="form-group">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="validation-message"></span>
    </div>

    <!-- Role editable -->
    <div class="form-group">
        <label asp-for="Role" class="control-label">Role</label>
        <select asp-for="Role" class="form-control">
            <option value="Admin">Admin</option>
            <option value="Customer">Customer</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel buttons -->
    <div class="form-actions">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: #fff; /* Dark gray for title */
        margin-top: 20px;
        font-size: 2em;
    }

    main {
        background-color: #051c42;
    }

    /* Section Divider */
    .section-divider {
        border: 0;
        height: 1px;
        background-color: #ddd; /* Light gray for the divider */
        margin: 20px 0;
    }

    /* Form Container */
    .edit-customer-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9; /* Light gray background */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Form Group */
    .form-group {
        margin-bottom: 15px;
    }

    /* Labels */
    .form-label {
        font-weight: bold;
        color: #333; /* Dark gray for labels */
        margin-bottom: 5px;
        display: block;
    }

    /* Input Fields */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc; /* Light gray border */
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 1em;
        margin-bottom: 5px;
    }

        /* Read-Only Input */
        .form-control[readonly] {
            background-color: #e9ecef; /* Light gray background for read-only fields */
            cursor: not-allowed;
        }

    /* Validation Messages */
    .validation-message {
        color: #dc3545; /* Bootstrap danger color for validation messages */
        font-size: 0.875em;
    }

    /* Action Buttons */
    .form-actions {
        text-align: center;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 1em;
        color: #fff;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary color */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue for hover */
        }

    .btn-secondary {
        background-color: #6c757d; /* Bootstrap secondary color */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray for hover */
        }

</style>